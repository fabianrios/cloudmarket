<% content_for :title, "Home - cloudmarket" %>

<div class="row">
  <div class="large-8 small-12 columns large-centered">

    <h3 class="subheader">Alacena de <%= image_tag @user.picture, :class => 'circle' %> <%= @user.name %></h3>
    <hr>

    <% if !@user.products.empty? %>
        <ul class="no-bullet listado" >
          <% for product in @products %>
              <li class="<%= product.category %>">
                <div class="title-info">
					<div class="row">
						<div class="large-6 columns">
							<h4>
								<%= product.title %>
									<% if !product.blank? %>
										<% if current_user.id == product.user_id %>
											<%= link_to(edit_user_product_path(@user, product), :class=>"edit") do %>
											<span class="icon-pencil"></span>
										<% end %>
											<%= link_to([@user, product], :class=>"delete", :confirm => 'Estas seguro de querer borrarlo?', :method => :delete) do %>
											<span class="icon-remove"></span>
										<% end %>
									<% end %>
								<% end %>
							</h4>
							<% if current_user.id == product.user_id %>
								<div class="switch small round">
									<input id="<%= product.id %>" name="switch-<%= product.id %>" type="radio">
									<label for="<%= product.id %>" onclick="">Comprar</label>
									<input id="z-<%= product.id %>" name="switch-<%= product.id %>" type="radio" checked>
									<label for="z-<%= product.id %>" onclick="">Tengo</label>
									<span></span>
								</div>
							<% end %>
						</div>
						<div class="large-6 columns">
							<div class="prices">
								<span class="market"><%= number_to_currency(product.price) %></span>
							</div>
						</div>
					</div>
                </div>
                <div class="more-info">
                    <span class="left"><strong><%= product.quantity %></strong> Unid. x <strong><%= product.unit %></strong></span> <span class="the-category <%= product.category %>"><%= product.category %></span>
                    <div class="text-center place">
                      <strong><%= product.storeName %></strong>
                      <small><%= product.adress %></small>
                    </div>
                </div>
              </li>
          <% end %>
        </ul>
    <% else %>
        <div data-alert class="alert-box secondary"><%= @user.name %> No has creado ningun producto.<a href="#" class="close">&times;</a></div>
    <% end %>

    <br>
    <% if current_user.id == @user.id %>
       <%= link_to 'Crear Producto', new_user_product_path(@user), :class => "button right success" %>
    <% end %>
   </div>
</div>



