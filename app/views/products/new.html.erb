

<div class="row">
  <div class="large-12 columns">
    <% if current_user.id == @user.id %>
    <h1 class="subheader">Nuevo Producto <small>en la Alacena de <%= @user.name %></small></h1>

    <%= render 'form' %>
    <% else %>

        <div data-alert class="alert-box alert">No puedes crear productos en la alacena de <%= @user.name %><a href="#" class="close">&times;</a></div>

    <% end %>
    <%= link_to 'Volver', user_products_path(@user), :class => 'button terciary' %>
  </div>
</div>

