<html ng-app="Cloud">
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Fabián Ríos at fabianrios.co">
    <meta name="description" content="Una comunidad para hacer mercado, comparte las cosas que compras y enterate donde puedes comprar tus productos habituales. ¿Quieres saber cuanto costo ese producto el mes pasado, o que productos consumen y donde compran los demas?">

  	<title><%= content_for?(:title) ? yield(:title) : "CloudMarket" %></title>

  	<%= stylesheet_link_tag    "application" %>
    <link rel="stylesheet" href="http://i.icomoon.io/public/temp/b70ee17e71/UntitledProject1/style.css">
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body ng-controller="ProductCtrl">



    <div class="row">
      <div class="large-5 columns">
        <header>
          <h1 class="no-margin"><a href="/"><%= image_tag("logo.png") %> CloudMarket</a></h1>
          <h4 class="subheader no-margin pretitle">Una comunidad para hacer mercado.</h4>
        </header>
      </div>
      <div class="large-7 columns">
        <div class="user_nav right">
          <% if current_user %>
              <%= link_to  'Personas' ,users_path, :class => "button terciary small radius" %>
              <%= link_to  'Mi Alacena' ,user_products_path(current_user.id), :class => "button terciary small radius" %>
              <%= link_to image_tag(current_user.picture, :class => 'circle'), user_path(current_user.id) %> <strong><%= current_user.name %> </strong>
              <%= link_to "Salir", signout_path, id: "sign_out" %>
          <% else %>
              <%= link_to "Conectar con Facebook", "/auth/facebook", id: "sign_in", :class => "button round" %>
          <% end %>
        </div>
      </div>
    </div>


    <%= yield %>
    <footer>
      <p class="text-center"><small>&copy; 2013 <a href="http://fabianrios.co" targe="_blank"> Fabián Ríos</a></small></p>
    </footer>
    
    <%= javascript_include_tag "application" %>
  </body>
</html>
